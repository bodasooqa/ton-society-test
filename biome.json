{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "ignore": ["node_modules", "dist", "out", "build", "public", "tsconfig.*"],
    "include": [
      "**/src/**/*.js",
      "**/src/**/*.jsx",
      "**/src/**/*.ts",
      "**/src/**/*.tsx",
      "**/src/**/*.scss",
      "**/src/**/*.css",
      "**/*.json"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "ignore": ["node_modules", "dist", "out", "build", "public", "tsconfig.*"]
  },
  "organizeImports": { "enabled": true },
  "linter": {
    "enabled": true,
    "rules": {
      "suspicious": {
        "noConsoleLog": "warn",
        "noEmptyInterface": "off",
        "noArrayIndexKey": "warn"
      },
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "warn",
        "useExhaustiveDependencies": "warn"
      },
      "style": {
        "useBlockStatements": "error",
        "noNonNullAssertion": "off"
      },
      "performance": {
        "noDelete": "off"
      }
    }
  }
}
